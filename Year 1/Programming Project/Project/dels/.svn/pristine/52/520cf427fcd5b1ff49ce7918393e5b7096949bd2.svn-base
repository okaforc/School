void draw() {
  pushMatrix();
  translate(centerX + slide, centerY);
  if (moveScreenY) {
    screen0.moveScreenY();
  } else if (moveScreenX) {
    screen0.moveScreenX();
  }
  moveScreenY = false;
  moveScreenX = false;
  stroke(BLACK);
  strokeWeight(1);
  background(currentScreen.backgroundColor);    

  if (slide > 0) {
    slide -= width/10;
  } else {
    slide = 0;
  }

  if (currentScreen == screen0) {
    drawScreen0();
  } else if (currentScreen == screen1) {
    drawScreen1();
  } else if (currentScreen == screen2) {
    drawScreen2();
  } else if (currentScreen == screen3) {
    drawScreen3();
  } else if (currentScreen == screen4) {
    drawScreen4();
  } else if (currentScreen == screen42) {
    drawScreen42();
  } else if (currentScreen == screen5) {
    td.printRawData();
  }
  if (currentScreen != screen5) currentScreen.drawWidgets();
  popMatrix();
  fill(WHITE);
  translate(slide, 0);
  if (currentScreen == screen1) {
    if (width<1900 || height<950) {
      line(width-15, 0, width-15, height);
      sbx.dif = 1900-width;
      sbx.draw();
      line(0, height-15, width, height-15);
      sby.dif = 950 - height;
      sby.draw();
    }
  } else if (currentScreen == screen2) {
    if (width<1900 || height<950) {
      line(width-15, 0, width-15, height);
      sbx.dif = 1900-width;
      sbx.draw();
      line(0, height-15, width, height-15);
      sby.dif = 950-height;
      sby.draw();
    }
  } else if (currentScreen == screen5) {
    screen5.drawWidgets();
  }
}

static void removeDuplicates(ArrayList arr) {
  // send arraylist to linkedhashset to preserve order and remove duplicated
  Set<Object> tempSet = new LinkedHashSet<Object>(arr);   
  arr.clear();
  arr.addAll(tempSet);
}

void keyPressed() {
  if (key == ENTER || key == RETURN) {
    if (currentScreen == screen1) {
      if (input != "") {
        selectedState = input;
        co = td.getCountry("united states");
        if (co.containsState(selectedState)) {
          state = co.getState(selectedState);
          currentScreen = screen2;
          errorInput = false;
          slide = width;
        } else {
          errorInput = true;
          selectedState = "";
        }
        input = "";
        if (state != null) {
          ArrayList<Area> areas = state.getAreas();
          String[] arrAreas = new String[areas.size()];
          int index = 0;
          for (Area a : areas) {
            arrAreas[index] = a.getName();
            index++;
          }
          l.clear();
          l.addItems(arrAreas);
        }
      }
    } else if (currentScreen == screen2) {
      if (input != "") {
        strcounty = input;
        State state = td.getCountry(0).getState(selectedState);
        if (state.containsArea(input)) {
          currentScreen = screen3;
          slide = width;
        } else {
          input = "";
          errorInput = true;
        }
      } else {
        noSelectedArea = true;
      }
    }
  } else if (key == BACKSPACE) {
    if (input.equalsIgnoreCase("")) {
      input = "";
    } else {
      input = input.substring(0, input.length()-1);
    }
  } else if (alphabet.contains(Character.toLowerCase(key))) {
    input += key;
  }
}

